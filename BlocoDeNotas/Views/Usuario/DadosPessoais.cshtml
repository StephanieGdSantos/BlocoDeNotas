@{
}

<div class="d-flex justify-content-end flex-column">
    <div class="d-flex">
        <div class="d-flex justify-content-center" style="flex: 1;">
            <img src="../img/logotipo.svg" alt="Logotipo NoteNest" style="width: 100%;max-width: 50px;object-fit: contain;" />
        </div>

        <div class="navbar">
            <a asp-controller="Notas" asp-action="Index" class="fw-bold fs-5 text-decoration-none texto-marrom btn">Home</a>

            <div class="d-flex align-items-center position-relative" style="cursor: pointer;gap: 0.5rem;" onclick="MostrarOpcoes()">
                <p class="d-flex mb-0 fw-bold fs-5 texto-marrom">Olá, Stephanie</p>
                <img src="../img/icon-seta.svg" style="margin-top: 0.2rem; width: 8%;">

                <div class="opcoes texto-marrom mostrar" id="opcoes">
                    <a>Dados pessoais</a>
                    <a>Sair</a>
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex" style="padding: 25px 10%;">
        <a class="d-flex gap-3 text-decoration-none voltar" asp-controller="Notas" asp-action="Index">
            <img src="../img/seta-voltar.svg" style="width: 30px;" />Voltar
        </a>
    </div>

    <div class="d-flex justify-content-start">
        <h2 style="font-weight: bold; padding-left: 10%;">DADOS PESSOAIS</h2>
    </div>

    <div class="d-flex justify-content-center">
        <form class="d-flex flex-column cadastro p-5 w-50 rounded-3">
            <div class="d-flex flex-column gap-3">
                <div class="d-flex flex-column">
                    <label for="nome" class="titulo-input">Nome:</label>
                    <input type="text" class="border rounded-3 border-secondary ps-2" id="nome" placeholder="Luiza Alves Souza">
                </div>
                <div class="d-flex flex-column">
                    <label for="email" class="titulo-input">E-mail:</label>
                    <input type="email" class="border rounded-3 border-secondary ps-2" id="email" placeholder="luizaalves@gmail.com">
                </div>
                <div class="d-flex flex-column">
                    <label for="senha" class="titulo-input">Senha:</label>
                    <input type="password" class="border rounded-3 border-secondary ps-2" id="senha" placeholder="*********">
                </div>
            </div>
            <div class="d-flex justify-content-between" style="margin-top: 25px;">
                <a role="button" class="link-danger">Excluir conta</a>
                <button type="submit" class="botao-enter">Atualizar</button>
            </div>
        </form>
    </div>

</div>