<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BlocoDeNotas</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/BlocoDeNotas.styles.css" asp-append-version="true" />
</head>
<style>
    .footer{
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #FAEFC2;
        color: #5D4C30; 
        height: 50px;
        width: 100%;
    }

    body {
        font-family: 'Lato', sans-serif;
    }

</style>
<body>
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="footer">
            <a href="https://www.linkedin.com/in/stephanie-gomes-842a192a7/" style="color: #5D4C30;font-size: 10pt; text-decoration: none;">Desenvolvido por Stephanie Gomes</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
