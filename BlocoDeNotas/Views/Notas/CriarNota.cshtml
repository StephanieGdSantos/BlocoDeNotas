@model NotasModel;
@{
    ViewData["Title"] = "Criar nova nota";
}

<div class="d-flex justify-content-end flex-column">

    <div class="d-flex" style="padding: 25px 10%;">
        <a class="d-flex gap-3 text-decoration-none voltar" asp-controller="Notas" asp-action="Index">
            <img src="../img/seta-voltar.svg" style="width: 30px;" />Voltar
        </a>
    </div>

    <div class="d-flex justify-content-center">
        <form asp-controller="Notas" asp-action="CriarNota" method="post" class="visao-notas w-nova-nota">
            <input type="hidden" value="@DateTime.Now.ToString("dd/MM/yyyy")" asp-for="DataCriacao"/>
            <input type="hidden" value="@ViewBag.UsuarioID" asp-for="UsuarioId"/>
            <input type="text" name="titulo" class="input-titulo" asp-for="Titulo" placeholder="Título aqui" />
            <textarea class="input-nota h-ipt-nova-nota" asp-for="Descricao" placeholder="Anotações aqui..."></textarea>
            <div class="d-flex justify-content-between">
                <button class="text-decoration-underline bg-transparent border-0" style="color: #5D4C30;" type="reset">Limpar</button>
                <button type="submit" class="btn w-25 text-white" style="background: #5D4C30;">Salvar</button>
            </div>
        </form>
    </div>

</div>